<mvc:View
	controllerName="testfunction.controller.SecondPage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
<Page navButtonPress=".onNavButtonPress" showNavButton="true" title="{i18n>title}">
        <content>
            <Title text='qualcosa' titleStyle="H1"></Title>
			<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Details"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Name" />
				<Text text="{path: 'modelloSecondo>/categoria/CategoryName'}"></Text>
				<Label text="ID category" />
				<Text text="{path: 'modelloSecondo>/categoria/CategoryID'}"></Text>
				<Label text="description" />
				<Text text="{path: 'modelloSecondo>/categoria/Description'}"></Text>
			</f:content>
		</f:SimpleForm>
        </content>  
    </Page>
</mvc:View>